<s:Application
		xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:components="org.robotlegs.demos.imagegallery.views.components.*" xmlns:base="boiler.base.*"
		maxWidth="520"
		>

	<fx:Script><![CDATA[
		import boiler.steam.SteamInitializer;

		import org.robotlegs.demos.imagegallery.FlickrGalleryInitializer;
		]]></fx:Script>

	<s:layout>
		<s:VerticalLayout paddingBottom="10"
						  paddingLeft="10"
						  paddingRight="10"
						  paddingTop="10"/>
	</s:layout>

	<fx:Declarations>
		<base:Lifetime initializers="{[SteamInitializer,new FlickrGalleryInitializer(this)]}" />
	</fx:Declarations>

	<components:GalleryHeader/>

	<components:GallerySearch id="search"
							  width="100%"
							  visible="false"
							  includeInLayout="false"/>

	<components:GalleryView id="gallery"/>

</s:Application>
