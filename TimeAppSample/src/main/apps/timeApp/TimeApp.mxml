<?xml version="1.0"?>
<mx:Canvas
		borderColor="{0x454545}" borderThickness="2" borderStyle="solid" backgroundColor="{0x121212}"
		width="300" height="50"
		xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:timeapp="apps.timeApp.*">


	<mx:Script><![CDATA[
		import apps.timeApp.controller.ResetCurrentTimeEvent;

		private function fakeMediator(event:Event):void {
			var notifier:IEventDispatcher = lifetime.getInstance(IEventDispatcher);

			notifier.dispatchEvent(event);
		}
		]]></mx:Script>

	<timeapp:TimeAppLifetime id="lifetime"/>

	<mx:Button label="Reset" click="fakeMediator(new ResetCurrentTimeEvent())"/>

</mx:Canvas>
